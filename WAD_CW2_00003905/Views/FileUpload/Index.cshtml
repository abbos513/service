@model WAD_CW2_00003905.Models.ServiceImportModel

@{
    ViewBag.Title = "Index";
}

<h2>Service Import</h2>

@using (Html.BeginForm("Index", "FileUpload", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <input type="file" class="input-box" id="fileToImport" name="fileToImport"/>
    <input type="submit" value="Upload"/>
}

<table>
    <thead>
        <tr>
            <td>Name</td>
            <td>Type</td>
            <td>Price</td>
            <td>Description</td>
        </tr>
    </thead>
    <tbody>
        @if(ViewBag.Services != null)
        {
            var services = ViewBag.Services as List<WAD_CW2_00003905.Models.ServiceImportModel>;
            if(services != null)
            {
                foreach(var service in services)
                {
                    <tr>
                        <td>@service.Name</td>
                        <td>@service.Type</td>
                        <td>@service.Price</td>
                        <td>@service.Description</td>
                    </tr>
                }
            }
        }
    </tbody>

</table>